@model Entities.Customer

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
             <p id="id"> @Model.CustomerId</p>

            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <p id="username" class="form-control"></p>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input id="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Firstname" class="control-label"></label>
                <input id="firstname" class="form-control" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname" class="control-label"></label>
                <input id="lastname" class="form-control" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input id="address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input id="state" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input id="city" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip" class="control-label"></label>
                <input id="zipcode" class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNo" class="control-label"></label>
                <input id="phoneno" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input  id="save" type="submit" value="Save" class="btn btn-default" />
            </div>
    
            </form>
    </div>
    
</div>

<div>
    <a asp-action="../Home/Index">Back to List</a>
</div>

<script>

    $('#save').click(function (e) {
        var url = "http://localhost:54241/api/Customers/"+ $("#id").text();
        $.ajax({
            contentType: "application/json",
            type: "PUT",
            url: url,
            data: JSON.stringify({
                CustomerId: $('#id').text(),
                Username: $('#username').text(),
                Password: $('#password').val(),

                Firstname: $('#firstname').val(),
                Lastname: $('#lastname').val(),


                Address: $('#address').val(),
                State: $('#state').val(),
                City: $('#city').val(),
                Zip: $('#zipcode').val(),
                PhoneNo: $('#phoneno').val()

            }),

            success: function (data, textStatus, jqXHR) {
     
                console.log(data);
                console.log("success");
            },
            error: function (jqXHR, textStatus, errorThrow) {
                console.log("error");
            }
        });
    });


    $(document).ready(function (e) {
        console.log($("#id"));
        var url = "http://localhost:54241/api/Customers/" + $("#id").text();
        $.ajax({
            contentType: "application/json",
            type: "GET",
            url: url,

            success: function (data, textStatus, jqXHR) {
                $('#username').text(data.username);
                $('#password').val(data.password);
                $('#firstname').val(data.firstname);
                $('#lastname').val(data.lastname);
                $('#address').val(data.address);
                $('#state').val(data.state);
                $('#city').val(data.city);
                $('#zipcode').val(data.zip);
                $('#phoneno').val(data.phoneNo);

                console.log(data);
                console.log("success2");
            },
            error: function (jqXHR, textStatus, errorThrow) {
                console.log("error2");
            }
        });
    });

</script>
