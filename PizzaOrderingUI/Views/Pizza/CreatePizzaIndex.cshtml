@model IEnumerable<Entities.Pizza>

@{
    ViewData["Title"] = "CreatePizzaIndex";
}

<h2>Index</h2>

<p>
    <a asp-action="GetPizzaInfo">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PizzaId)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.SizeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topping1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topping2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topping3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topping4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topping5)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaId)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SizeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topping1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topping2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topping3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topping4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topping5)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PizzaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PizzaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PizzaId">Delete</a>
            </td>
        </tr>
        }
        <tr>
            <td>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </td>
        </tr>
    </tbody>
</table>


